<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cin.ufpe.br.aque">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".AqueApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.login.ProfessorLoginActivity"
            android:label="@string/title_activity_professor_login"></activity>
        <activity android:name=".actvities.StudentRegisterActivity" />
        <activity
            android:name=".ui.login.StudentLoginActivity"
            android:label="@string/title_activity_student_login" />
        <activity android:name=".actvities.ProfessorAddClassActivity" />
        <activity android:name=".actvities.HomeProfessorActivity" />
        <activity android:name=".actvities.StudentAddClassActivity" />

        <receiver
            android:name=".receivers.LocationAlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".actvities.HomeStudentActivity" />
        <activity android:name=".actvities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".receivers.RoutineAlarmReceiver" />
        <receiver android:name=".receivers.ClassAlarmReceiver" />
    </application>

</manifest>