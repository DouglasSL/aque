<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actvities.StudentAddClassActivity">

    <ImageView
        android:id="@+id/header_background2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/add_student_class_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Adicionar Turma"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/class_code_input"
        android:layout_width="257dp"
        android:layout_height="53dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="253dp"
        android:ems="10"
        android:hint="CÃ³digo da Turma"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_background2" />

    <Button
        android:id="@+id/ok_student_class_button"
        android:layout_width="52dp"
        android:layout_height="53dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="40dp"
        android:background="@android:color/holo_blue_light"
        android:fadingEdge="vertical"
        android:shadowColor="@android:color/black"
        android:text="Ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_background2" />

</androidx.constraintlayout.widget.ConstraintLayout>