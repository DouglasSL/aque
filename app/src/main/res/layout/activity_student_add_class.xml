<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actvities.StudentAddClassActivity">

    <ImageView
        android:id="@+id/header_background2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/tomato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_student_class_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Adicionar Turma"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/class_code_input"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/tomato"
        android:fontFamily="monospace"
        android:ems="10"
        android:hint="CÃ³digo da Turma"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_background2" />

    <Button
        android:id="@+id/ok_student_class_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_buttom_tomato"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:fadingEdge="vertical"
        android:shadowColor="@android:color/black"
        android:text="Ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_background2" />

</androidx.constraintlayout.widget.ConstraintLayout>